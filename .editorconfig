# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation for python
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for Makefile
[Makefile]
indent_style = tab

# 2 space indentation for javascript
[*.js]
indent_style = space
indent_size = 2

# 2 space indentation for package.json
[package.json]
indent_style = space
indent_size = 2
